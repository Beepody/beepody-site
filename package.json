{
	"private": true,
	"name": "beepody-site",
	"homepage": "https://beepody.com/",
	"version": "0.0.42",
	"license": "GPL-3.0",
	"scripts": {
		"start": "wmr",
		"build": "wmr build --prerender",
		"postbuild": "./make-sitemap.mjs",
		"lint": "eslint 'public/**/*.{js,jsx,ts,tsx,mjs,json}'",
		"test": "jest",
		"clean": "rm -rf build coverage",
		"dev": "yarn test --watch",
		"serve": "wmr serve",
		"predeploy": "yarn clean && yarn lint && yarn test --watchAll=false --coverage && yarn build && cp CNAME ./dist/",
		"deploy": "gh-pages -d dist"
	},
	"eslintConfig": {
		"extends": [
			"preact",
			"plugin:@typescript-eslint/recommended",
			"plugin:@typescript-eslint/recommended-requiring-type-checking"
		],
		"rules": {
			"semi": [
				2,
				"never"
			],
			"indent": [
				"error",
				2
			]
		}
	},
	"dependencies": {
		"beepody": "0.3.33333333",
		"preact": "^10.7.2",
		"preact-iso": "^2.3.0",
		"use-hash-state": "^2.0.1"
	},
	"devDependencies": {
		"@types/enzyme": "^3.10.12",
		"@types/jest": "^27.5.0",
		"@types/react": "^18.0.9",
		"@types/react-helmet": "^6.1.5",
		"@typescript-eslint/eslint-plugin": "^5.22.0",
		"@typescript-eslint/parser": "^5.22.0",
		"enzyme": "^3.11.0",
		"eslint": "^8.15.0",
		"eslint-config-preact": "^1.3.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"gh-pages": "^3.2.3",
		"jest": "^28.1.0",
		"prettier": "^2.6.2",
		"react": "^18.1.0",
		"react-helmet": "^6.1.0",
		"ts-jest": "^28.0.2",
		"ts-jest-resolver": "^2.0.0",
		"typescript": "^4.6.4",
		"wmr": "^3.7.2"
	}
}
